{
    "name": "rc-project-server",
    "version": "1.0.0",
    "main": "app.ts",
    "license": "MIT",
    "dependencies": {
        "@types/jest": "^27.0.1",
        "axios": "^0.21.1",
        "connect-mongo": "^4.4.1",
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "express-session": "^1.17.2",
        "helmet": "^4.6.0",
        "mongodb-memory-server": "^6.9.6",
        "mongoose": "^5.12.14",
        "simple-oauth2": "^4.2.0"
    },
    "devDependencies": {
        "@babel/core": "^7.14.6",
        "@babel/preset-env": "^7.14.7",
        "@babel/preset-typescript": "^7.14.5",
        "@types/cors": "^2.8.10",
        "@types/express": "^4.17.12",
        "@types/express-session": "^1.17.3",
        "@types/node": "^16.6.0",
        "@types/simple-oauth2": "^4.1.0",
        "@types/supertest": "^2.0.11",
        "dotenv": "^10.0.0",
        "jest": "^27.0.6",
        "supertest": "^6.1.3",
        "ts-node-dev": "^1.1.6",
        "typescript": "^4.3.4"
    },
    "scripts": {
        "dev": "NODE_ENV=development ts-node-dev src/server.ts",
        "test": "NODE_ENV=test jest",
        "start:devStatic": "NODE_ENV=development node --require dotenv/config dist/server.js",
        "start": "node dist/server.js",
        "build:client": "cd client && yarn install && yarn build && cd ..",
        "build:server": "tsc",
        "build": "export SKIP_PREFLIGHT_CHECK=true && yarn build:client && yarn build",
        "deploy": "git add . && git commit -m deploy && git push heroku main",
        "start:test": "NODE_ENV=test ts-node src/server.ts"
    },
    "jest": {
        "verbose": false
    },
    "babel": {
        "presets": [
            [
                "@babel/preset-env",
                {
                    "targets": {
                        "node": "current"
                    }
                }
            ],
            "@babel/preset-typescript"
        ]
    },
    "repository": "github:artsze/rc-prjkt",
    "engines": {
        "node": ">=14.x"
    }
}
